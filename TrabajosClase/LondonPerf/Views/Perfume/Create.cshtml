@model LondonPerf.Models.Perfume

@{
    ViewData["Title"] = "Crear";
}

<h1>Create</h1>

<h4>Perfume</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Marca" class="control-label">Marca del perfume:</label>
                <input asp-for="Marca" class="form-control" type="text" required placeholder="Inserte la marca"/>
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label">Modelo del perfume:</label>
                <input asp-for="Modelo" class="form-control" type="text" required placeholder="Inserte la marca" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio del perfume:</label>
                <input asp-for="Precio" class="form-control" type="number" required placeholder="Inserte el precio" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gama" class="control-label"> Gamma del perfume</label>
                <select asp-for="Gama" class="form-control" required>
                    <option value="">Seleccione una opción</option>
                    <option value="Baja">Baja</option>
                    <option value="Media">Media</option>
                    <option value="Alta">Alta</option>
                </select>
                <span asp-validation-for="Gama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="reset" value="Cancelar" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
